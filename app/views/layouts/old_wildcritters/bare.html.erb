<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <title><%= @page_title %> ~ <3 Welcome!</title>
    <meta name="RATING" content="RTA-5042-1996-1400-1577-RTA" />
    <meta name="keywords" content="cute,kawaii,kemono,yiff,furry,critter">
    <meta name="description" content="Wild Critters">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="top" title="<%= CONFIG["app_name"] %>" href="<%= CONFIG["url_base"] %>/">
    <%= stylesheet_link_tag "old_wildcritters" %>
    <style type="text/css">
      html, body { height: 100%; }
    </style>
    <%= CONFIG["custom_html_headers"] %>
  </head>

  <body>
      <div align="center" style="width: 100%; height: 100%; background: transparent url(/images/old_wildcritters/russet-bg-bare.gif) no-repeat scroll bottom right;">
      <table cellspacing="0" cellpadding="0">
        <tr>
          <td id="page-table">
            <table cellspacing="0" cellpadding="0" style="padding: 0px; margin: 0px; width:100%; height: 38px;">
              <tr>
                <td style="padding: 0px;"><a href="<%= CONFIG["url_base"] %>/"><img src="<%= CONFIG["url_base"] %>/images/old_wildcritters/big-tab.gif" style="float: left;"></a></td>
                <td style="padding: 0px; background-image: url(<%= CONFIG["url_base"] %>/images/old_wildcritters/tab-sbg.gif); width: 100%;">&nbsp;</td>
                <td style="padding: 0px; width: 10px;"><img src="<%= CONFIG["url_base"] %>/images/old_wildcritters/tab-tr.gif"></td>
              </tr>
            </table>
            <table cellspacing="0" cellpadding="0" style="padding: 0px; margin: 0px; background-color: #fff6d7;">
              <tr>
                <td style="padding: 0px; width: 4px; background-image: url(<%= CONFIG["url_base"] %>/images/old_wildcritters/fldr-lf.gif); background-repeat: repeat-y;"> </td>
                <td style="padding: 2em;">
                  <% if flash[:notice] %>
                    <div id="notice">
                      <%= flash[:notice] %>
                    </div>
                  <% else %>
                    <div id="notice" style="display: none;">
                      <%= flash[:notice] %>
                    </div>
                  <% end %>
                  <div id="content">
                    <%= @content_for_layout %>
                  </div>
                </td>
                <td style="padding: 0px; width: 7px; background-image: url(<%= CONFIG["url_base"] %>/images/old_wildcritters/fldr-rt.gif); background-repeat: repeat-y;"> </td>
              </tr>
            </table>
            <table cellspacing="0" cellpadding="0" style="padding: 0px; margin: 0px; background-color: #fff6d7; width:100%;">
              <tr style="padding: 0px; height: 27px;">
                <td style="padding: 0px; background-image: url(<%= CONFIG["url_base"] %>/images/old_wildcritters/ftr-lf.gif); background-repeat: no-repeat; width: 31px;">&nbsp;</td>
                <td style="padding: 0px; background-image: url(<%= CONFIG["url_base"] %>/images/old_wildcritters/ftr-md.gif); background-repeat: repeat-x;">&nbsp;</td>
                <td style="padding: 0px; background-image: url(<%= CONFIG["url_base"] %>/images/old_wildcritters/ftr-rt.gif); background-repeat: no-repeat; width: 7px;">&nbsp;</td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </div>
  </body>
</html>
